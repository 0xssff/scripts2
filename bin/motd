#!/bin/sh
#
# @grufwwub
# PLATFORM: ANY
#
# Displays simple motd

# Fetch stats
int_ip=$(hostname -i)
ext_ip=$(curl --silent icanhazip.com)

true | openssl s_client -connect notbird.site:443 > /dev/null 2>&1
notbird_up=$?

disk_usage=$(df -h | grep -vE '(^Filesystem\s)|(^tmpfs\s)|(^tmp\s)|(^dev\s)|(^shm\s)|(^run\s)')

# Clear screen and print header
clear -x
printf '

\e[32m ▄▄▄▄   ▓█████   \e[34m   ▄████  ▄▄▄     ▓██   ██▓                                                                          
\e[32m▓█████▄ ▓█   ▀   \e[34m  ██▒ ▀█▒▒████▄    ▒██  ██▒                                                                          
\e[32m▒██▒ ▄██▒███     \e[34m ▒██░▄▄▄░▒██  ▀█▄   ▒██ ██░                                                                          
\e[32m▒██░█▀  ▒▓█  ▄   \e[34m ░▓█  ██▓░██▄▄▄▄██  ░ ▐██▓░                                                                          
\e[32m░▓█  ▀█▓░▒████▒  \e[34m ░▒▓███▀▒ ▓█   ▓██▒ ░ ██▒▓░                                                                          
\e[32m░▒▓███▀▒░░ ▒░ ░  \e[34m  ░▒   ▒  ▒▒   ▓▒█░  ██▒▒▒                                                                           
\e[32m▒░▒   ░  ░ ░  ░  \e[34m   ░   ░   ▒   ▒▒ ░▓██ ░▒░                                                                           
\e[32m░    ░    ░      \e[34m░ ░   ░   ░   ▒   ▒ ▒ ░░                                                                            
\e[32m░         ░  ░   \e[34m      ░       ░  ░░ ░                                                                               
\e[32m░                \e[34m             ░ ░                                                                               
\e[33m▓█████▄  ▒█████     \e[31m ▄████▄   ██▀███   ██▓ ███▄ ▄███▓▓█████   ██████                                                  
\e[33m▒██▀ ██▌▒██▒  ██▒   \e[31m▒██▀ ▀█  ▓██ ▒ ██▒▓██▒▓██▒▀█▀ ██▒▓█   ▀ ▒██    ▒                                                  
\e[33m░██   █▌▒██░  ██▒   \e[31m▒▓█    ▄ ▓██ ░▄█ ▒▒██▒▓██    ▓██░▒███   ░ ▓██▄                                                    
\e[33m░▓█▄   ▌▒██   ██░   \e[31m▒▓▓▄ ▄██▒▒██▀▀█▄  ░██░▒██    ▒██ ▒▓█  ▄   ▒   ██▒                                                 
\e[33m░▒████▓ ░ ████▓▒░   \e[31m▒ ▓███▀ ░░██▓ ▒██▒░██░▒██▒   ░██▒░▒████▒▒██████▒▒                                                 
\e[33m ▒▒▓  ▒ ░ ▒░▒░▒░    \e[31m░ ░▒ ▒  ░░ ▒▓ ░▒▓░░▓  ░ ▒░   ░  ░░░ ▒░ ░▒ ▒▓▒ ▒ ░                                                 
\e[33m ░ ▒  ▒   ░ ▒ ▒░    \e[31m  ░  ▒     ░▒ ░ ▒░ ▒ ░░  ░      ░ ░ ░  ░░ ░▒  ░ ░                                                 
\e[33m ░ ░  ░ ░ ░ ░ ▒     \e[31m░          ░░   ░  ▒ ░░      ░      ░   ░  ░  ░                                                   
\e[33m   ░        ░ ░     \e[31m░ ░         ░      ░         ░      ░  ░      ░                                                   
\e[33m ░                  \e[31m░                                                                                                 

\e[39m'

# Display stats
[ ! -z "$ext_ip" ] && printf '\e[1mInternal:\e[0m %s\n\e[1mExternal:\e[0m %s\n\n' "$int_ip" "$ext_ip"

printf '\e[1mDisk usage:\e[0m\n%s\n\n' "$disk_usage"

printf '\e[1mnotbird.site - '
if [ $notbird_up -eq 0 ]; then
    printf '\e[32mOK\n'
else
    printf '\e[31mISSUES!\n'
fi

printf '\e[39m\n'

# Unset variables
unset int_ip ext_ip notbird_up disk_usage