#!/bin/bash

function check_module()
{
    if ! (lsmod | grep -q -e '^msr') ; then
        sudo modprobe msr
    fi
}

function set_perf()
{
    sudo x86_energy_perf_policy --cpu $1 $2
}

check_module

for cpu in $(ls /dev/cpu); do
    if [ -c "/dev/cpu/$cpu/msr" ]; then
        set_perf $cpu performance
    fi
done
