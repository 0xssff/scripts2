# Double check not already set
SHELLRC_SET=1

# Variables
EDITOR=nano
PATH="$HOME/bin:$PATH"

# Shell PS1
if [ -z "$USER" ]; then
    _USER=$(whoami)
else
    _USER=$USER
fi

PS1=$'\033[01;32m$_USER\033[00m @ \033[01;34m$(if echo "$PWD" | grep -q -E "^$HOME"; then echo "$PWD" | sed -e "s|^$HOME|~|g"; else echo "$PWD"; fi)\033[00m
--> '

# Alias
alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias clear='clear -x'

# Export variables
export EDITOR PATH PS1

# ssh
eval `keychain "$HOME/.ssh/id_ecdsa"`